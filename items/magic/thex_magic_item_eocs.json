              { "u_message": "You feel more sensitive to your surroundings.", "type": "good" }
            ]
          },
          { 
            "case": 6, "effect": [ 
              { "math": [ "var_posessed_trumpet_per", "=", " - ( 1 + rand(2) )" ] },
              { "u_add_effect": "possessed_trumpet_stat_effect", "duration": "12 h" },
              { "u_message": "You feel numb, deafened.", "type": "bad" }
